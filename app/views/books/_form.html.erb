<%= form_with model:book, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  <div class="form-group" id="star"></div>
  
    <div class="form-group" id="star">
      <%= f.label :rate %>
      <%= f.hidden_field :rate, id: :review_star, class:'form-control' %>
    </div>
      
    <div id="post_raty"></div>
    <script>
      $(document).on('turbolinks:load', function() { //ドキュメントが読み込まれたら↓を実行
      let raty_elem = document.querySelector('#post_raty'); //raty_elemは一番最初に読み込まれたpost_raty(CSSセレクター)であると宣言
      raty_elem.innerHTML = "" //raty_elemを""に変更する記述（おそらく星にマウスが乗った時に色がつける機能）
      let option = {  
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'book[rate]',
        };
      raty(raty_elem,option);
     });
    </script>
    
    
  
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
